<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Background Image (Optional - keep or remove based on design) -->
        <ImageView
            android:id="@+id/headerImageView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_38"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:visibility="gone" tools:visibility="visible"/>

        <!-- Profile Content Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            style="@style/Widget.App.CardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="25dp"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintTop_toTopOf="@id/headerImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <!-- Profile Title and Avatar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/titleProfile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hồ sơ cá nhân"
                        android:textAppearance="@style/TextAppearance.App.HeadlineSmall"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/avatarImageView"
                        android:layout_width="@dimen/avatar_size_large"
                        android:layout_height="@dimen/avatar_size_large"
                        android:src="@drawable/icon_avatar"
                        android:elevation="@dimen/card_elevation"
                        android:layout_marginStart="@dimen/spacing_medium"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircularImageView"
                        tools:srcCompat="@tools:sample/avatars"/>
                </LinearLayout>

                <!-- User Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <!-- Full Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/spacing_small">
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:src="@drawable/ic_user"
                            app:tint="?attr/colorOnSurface"
                            android:layout_marginEnd="@dimen/spacing_small"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họ và tên:"
                            android:textAppearance="@style/TextAppearance.App.LabelMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/fullNameTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:textAppearance="@style/TextAppearance.App.BodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="Fullname" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/spacing_small">
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:src="@drawable/email"
                            app:tint="?attr/colorOnSurface"
                            android:layout_marginEnd="@dimen/spacing_small"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textAppearance="@style/TextAppearance.App.LabelMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/emailTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:textAppearance="@style/TextAppearance.App.BodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="Email" />
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/spacing_small">
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:src="@drawable/ic_phone"
                            app:tint="?attr/colorOnSurface"
                            android:layout_marginEnd="@dimen/spacing_small"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Điện thoại:"
                            android:textAppearance="@style/TextAppearance.App.LabelMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/phoneTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:textAppearance="@style/TextAppearance.App.BodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="Phone" />
                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/spacing_small">
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:src="@drawable/ic_location"
                            app:tint="?attr/colorOnSurface"
                            android:layout_marginEnd="@dimen/spacing_small"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ:"
                            android:textAppearance="@style/TextAppearance.App.LabelMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/addressTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:textAppearance="@style/TextAppearance.App.BodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="Address" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/spacing_large">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/editProfileButton"
                        style="@style/Widget.App.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chỉnh sửa thông tin cá nhân"
                        app:icon="@drawable/edit"
                        app:iconTint="?attr/colorPrimary"
                        android:gravity="center_vertical|start"
                        android:paddingStart="@dimen/padding_medium"
                        android:drawablePadding="@dimen/spacing_medium"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/orderHistoryButton"
                        style="@style/Widget.App.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="Theo dõi trạng thái đơn hàng"
                        app:icon="@drawable/seen_history"
                        app:iconTint="?attr/colorPrimary"
                        android:gravity="center_vertical|start"
                        android:paddingStart="@dimen/padding_medium"
                        android:drawablePadding="@dimen/spacing_medium"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/shippingAddressButton"
                        style="@style/Widget.App.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="Địa chỉ vận chuyển"
                        app:icon="@drawable/location"
                        app:iconTint="?attr/colorPrimary"
                        android:gravity="center_vertical|start"
                        android:paddingStart="@dimen/padding_medium"
                        android:drawablePadding="@dimen/spacing_medium"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
