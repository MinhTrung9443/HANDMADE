<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <!-- Ảnh nền -->
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_87"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Khối nội dung -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:alpha="0.7"
            android:background="@color/black"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

                <!-- Tiêu đề -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="left"
                    android:paddingTop="8dp"
                    android:text="Support the local community."
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="italic" />

                <!-- Đường kẻ -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="@color/gray" />

                <!-- Nội dung văn bản -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small businesses and shops have always been the backbone of the Vietnam economy. During the pandemic around 40 million small business owners suffered from strict lockdown norms.
\n\nYet, there is a silver lining that brought in optimism as the country unlocked slowly. Indian consumers pivoted their purchase patterns, preferring local small businesses, independent stores, and local restaurants, which need their patronage.\n"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:text="Next"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="20dp" />


        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
